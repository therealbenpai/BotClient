{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node10",
        "target": "ESNext",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "rootDir": "src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declarationDir": "@types",
        "declaration": true,
        "strict": true,
        "moduleDetection": "auto"
    },
    "exclude": [
        "node_modules",
        "node_modules/**",
        "@types",
        "@types/**"
    ],
    "compileOnSave": true
}